{
  "coc.preferences.rootPatterns": [".coc", ".git",".vim", ".vscode"],
  "coc.preferences.formatOnSaveFiletypes": ["go", "rust"],
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,
  "coc.preferences.jumpCommand": "drop",

  "suggest.autoTrigger": "always",
  "suggest.triggerAfterInsertEnter": true,
  "suggest.noselect": true,
  "suggest.minTriggerInputLength": 1,
  "suggest.snippetIndicator": "â–º",
  "suggest.enablePreview": true,
  "suggest.timeout": 4000,

  "diagnostic.displayByAle": false,
  "diagnostic.virtualText": false,
  "diagnostic.checkCurrentLine": true,
  "diagnostic.refreshOnInsertMode": true,

  "python.jediEnabled": true,
  "python.jediPath": "~/workspace/neovim3/lib/python3.7/site-packages/",
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Path": "~/workspace/neovim3/bin/flake8",
  "python.linting.mypyEnabled": true,
  "python.linting.mypyPath": "~/workspace/neovim3/bin/mypy",
  "python.sortImports.path": "~/workspace/neovim3/bin/isort",
  "python.formatting.blackPath": "~/workspace/neovim3/bin/black",
  "python.autoComplete.extraPaths": ["src"],
  "python.analysis.typeshedPaths": ["~/.cache/typings"],
}
