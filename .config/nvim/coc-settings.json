{
  "coc.preferences.rootPatterns": [".coc", ".git",".vim", ".vscode"],
  "coc.preferences.formatOnType": true,
  "coc.preferences.formatOnInsertLeave": true,
  "coc.preferences.formatOnSaveFiletypes": ["go", "rust", "python"],
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,
  "coc.preferences.previewAutoClose": true,
  "coc.preferences.jumpCommand": "drop",
  "coc.source.buffer.ignoreGitignore": false,

  "suggest.autoTrigger": "always",
  "suggest.triggerAfterInsertEnter": true,
  "suggest.noselect": true,
  "suggest.minTriggerInputLength": 1,
  "suggest.snippetIndicator": "►",
  "suggest.floatEnable": true,
  "suggest.enablePreview": true,
  "suggest.timeout": 2000,  // jedi timeout

  "diagnostic.enable": true,
  "diagnostic.displayByAle": false,
  "diagnostic.virtualText": false,
  "diagnostic.checkCurrentLine": true,
  "diagnostic.refreshOnInsertMode": true,
  "diagnostic.messageDelay": 300,
  "diagnostic.enableMessage": "always",
  "diagnostic.messageTarget": "float",
  "diagnostic.enableHighlightLineNumber": true,
  "diagnostic.errorSign": "✖",
  "diagnostic.warningSign": "⚠",
  "diagnostic.infoSign": "ℹ",
  "diagnostic.hintSign": "➤",

  "codeLens.enable": true,
  "signature.enable": true,

  "python.jediEnabled": true,
  "python.jediPath": "~/workspace/neovim3/lib/python3.7/site-packages/",
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Path": "~/workspace/neovim3/bin/flake8",
  "python.linting.mypyEnabled": true,
  "python.linting.mypyPath": "~/workspace/neovim3/bin/mypy",
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "~/workspace/neovim3/bin/black",
  "python.sortImports.path": "${env.HOME}/workspace/neovim3/bin/isort",
  "python.sortImports.args": ["--settings-path", "${env.HOME}/.isort.cfg"],
  "python.autoComplete.addBrackets": true,
  "python.autoComplete.extraPaths": ["src", "src/protos", "scripts", "protos"],
  "python.analysis.diagnosticEnabled": true,
  "cSpell.language": "en",
  "cSpell.enabledLanguageIds": [
    "git-commit",
    "go",
    "javascript",
    "markdown",
    "python",
    "rust",
    "text",
    "yaml",
    "yml"
  ],
  "cSpell.userWords": [
    "asyncio",
    "pytest",
    "submodule"
  ]
}
