#!/usr/bin/env python
import sys
import json
from urllib import request


currency = len(sys.argv) == 2 and sys.argv[1] or 'eth'


resp = request.urlopen("http://api.chbtc.com/data/v1/ticker?currency={}_cny".format(currency))
if resp.code == 200:
    ticker = json.loads(resp.read().decode('utf-8'))['ticker']
else:
    ticker = dict(
        buy='~', sell='~')


content = 'B:{}￥|S:{}￥'.format(ticker['buy'], ticker['sell'])
sys.stdout.write(content)
sys.stdout.flush()
